pkgbase=('python-serpent')
pkgname=("$pkgbase" 'python2-serpent')
pkgver=1.7
pkgrel=2
pkgdesc='Serializer for literal Python expressions, also .NET and Java'
url='https://pypi.python.org/pypi/serpent'
arch=('any')
license=('MIT')
depends=('python' 'python2')
source=("https://pypi.python.org/packages/source/s/serpent/serpent-$pkgver.tar.gz")
md5sums=('c7b29b6f1cada44004819b7b2de05c3e')

package_python2-serpent() {
    depends=('python2')
    cd "serpent-$pkgver"
    python2 setup.py install --root="$pkgdir"
}

package_python-serpent() {
    depends=('python')
    cd "serpent-$pkgver"
    python setup.py install --root="$pkgdir"
}
